    <EditText
            android:id="@+id/etTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total"
            android:inputType="numberDecimal" />

    <EditText
            android:id="@+id/etMetodoPago"
            android:layout_width="match_parent"
