<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/productos_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icono de producto -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/productos_color"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_product"
                android:tint="@color/surface_white" />
        </com.google.android.material.card.MaterialCardView>

        <!-- InformaciÃ³n del producto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <!-- Precio y Stock -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <!-- Precio -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_money"
                        android:tint="@color/success_green"
                        android:layout_marginEnd="6dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvPrecio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/success_green" />
                </LinearLayout>

                <!-- Stock -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/tvStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/primary_blue_light"
                    app:chipStrokeWidth="0dp"
                    android:textColor="@color/primary_blue_dark"
                    app:chipMinHeight="28dp"
                    app:chipIcon="@drawable/ic_detail"
                    app:chipIconTint="@color/primary_blue_dark" />
            </LinearLayout>
        </LinearLayout>

        <!-- Indicador de estado -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/productos_color"
            android:layout_marginStart="8dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>